<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_border_blue">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/addpenduduk"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:fontFamily="@font/nunito_bold"
                    android:text="TAMBAH PENDUDUK"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/offwhite"
                    android:text="@string/add_penduduk"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/addpng"
                android:clickable="true"
                android:layout_marginLeft="30dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/addpenduduk"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_border_seagreen"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/listpenduduk"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:fontFamily="@font/nunito_bold"
                    android:text="LIST PENDUDUK"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/offwhite"
                    android:text="@string/cek_penduduk"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/listpng"
                android:clickable="true"
                android:layout_marginLeft="90dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/penduduk"/>
        </LinearLayout>
        <Button
            android:id="@+id/quitbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KELUAR"
            android:backgroundTint="@color/purple_700"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppinsbold"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>